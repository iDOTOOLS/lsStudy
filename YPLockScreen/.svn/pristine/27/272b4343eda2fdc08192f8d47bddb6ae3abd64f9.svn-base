<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/review_top_background"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_title_text"
            android:textColor="@color/text_write"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:background="@color/start_review_big_bg"
        android:orientation="vertical"
        android:padding="15dp" >

        <RelativeLayout
            android:id="@+id/word_fragment_book_ry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/set_item_bg_selector" >

            <ImageView
                android:id="@+id/word_fragment_book_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/word_fragemtn_word" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/word_fragment_book_img"
                android:textColor="@color/text_black"
                android:text="@string/unknow_word_book" />

            <ImageView
                android:id="@+id/word_fragment_back_btn_1"
                android:layout_width="6dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/set_button" />

            <TextView
                android:id="@+id/word_fragment_ci_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="@string/word"
                android:layout_toLeftOf="@id/word_fragment_back_btn_1"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/word_fragment_ci_book_word_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:textSize="16sp"
                android:textColor="#6DCB29"
                android:text="12"
                android:layout_toLeftOf="@id/word_fragment_ci_text_1"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/word_fragment_can_ry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/set_item_bg_selector" >

            <ImageView
                android:id="@+id/word_fragment_can_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/word_fragment_grasp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/word_fragment_can_img"
                android:text="@string/handled" />
            <ImageView
                android:id="@+id/word_fragment_back_btn_2"
                android:layout_width="6dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/set_button" />

            <TextView
                android:id="@+id/word_fragment_ci_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="@string/word"
                android:layout_toLeftOf="@id/word_fragment_back_btn_2"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/word_fragment_ci_grasp_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:textSize="16sp"
                android:textColor="#43B4FF"
                android:text="12"
                android:layout_toLeftOf="@id/word_fragment_ci_text_2"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>