<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef"
    android:gravity="center" 
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gridview_item_left_ly"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gridview_item_img"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:src="@drawable/today_unlock" />

            <TextView
                android:id="@+id/gridview_item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/indicator_pressed"
                android:text="@string/review_module_unlock_text" />
        </LinearLayout>
        
		<RelativeLayout
		    android:layout_width="0dp"
		    android:layout_weight="6"
		    android:layout_height="wrap_content"
		    >
		    <com.yp.lockscreen.view.AutofitTextView
		        android:id="@+id/gridview_item_count_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:maxWidth="50dp"
		        android:text="3213200"
		        android:singleLine="true"
		        android:textSize="40sp"
		        android:textColor="@color/text_count_gray"
		        />
		    <TextView
		        android:id="@+id/item_lock_unit_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@id/gridview_item_count_text"
		        android:layout_alignBaseline="@id/gridview_item_count_text"
		        android:text="@string/times"
		        android:textColor="@color/indicator_pressed"
		        android:textSize="12sp"
		        />
		    
		</RelativeLayout>

</LinearLayout>