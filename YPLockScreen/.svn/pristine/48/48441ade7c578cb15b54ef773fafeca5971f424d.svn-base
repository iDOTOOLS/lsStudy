<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/review_top_background" >

        <LinearLayout
            android:id="@+id/word_details_back_Ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/word_details_back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back_btn_bg_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/review_word"
                android:textColor="@color/text_write"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:background="@color/start_review_big_bg"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/word_details_word_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#fff9f9f9" >

                <com.yp.lockscreen.view.AutofitTextView
                    android:id="@+id/word_details_word_en"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center|bottom"
                    android:singleLine="true"
                    android:text="a"
                    android:textColor="@color/text_count_gray"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/word_details_pronunce_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignBaseline="@id/word_details_word_en"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/word_details_word_en"
                    android:background="@drawable/word_details_pronunce_selector" />

                <Button
                    android:id="@+id/word_details_add_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignBaseline="@id/word_details_word_en"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_norma" />

                <com.yp.lockscreen.view.AutofitTextView
                    android:id="@+id/word_details_word_soundmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/word_details_word_en"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="[agasdngasn]"
                    android:textColor="#929292"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffe0e0e0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" >

                <LinearLayout
                    android:id="@+id/word_details_show_details_ly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/text_write"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                     >

                    <TextView
                        android:id="@+id/word_details_word_translate_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="asdfasdfasdfasd"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/word_details_word_eg_en_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#ff646464"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/word_details_word_eg_cn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="1"
                            android:textColor="#ff646464"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/word_details_hid_details_ly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/text_write"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/show_mean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/click_show_translation"
                        android:textColor="#D6DAE9"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffe0e0e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/text_write"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/word_review_progress_text"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >

                    <ProgressBar
                        android:id="@+id/word_details_review_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:indeterminate="false"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/progress_drawable" />

                    <TextView
                        android:id="@+id/word_details_review_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="1/2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/word_details_forget_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_gary_selector"
                    android:text="@string/forgotten"
                    android:textColor="@color/text_write"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/word_details_remember_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_yellow_selector"
                    android:text="@string/remembered"
                    android:textColor="@color/text_write"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/word_details_finished_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/word_details_finish_anim_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@anim/review_finish_anim" />

            <EditText
                android:id="@+id/word_details_finish_share_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="bottom|center_horizontal"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/word_details_finish_share_btn"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_bg_yellow_selector"
                    android:text="@string/share_score"
                    android:textColor="@color/text_write"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/word_details_finish_re_study_btn"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_bg_gary_selector"
                    android:text="@string/go_on_study"
                    android:textColor="@color/text_write"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>