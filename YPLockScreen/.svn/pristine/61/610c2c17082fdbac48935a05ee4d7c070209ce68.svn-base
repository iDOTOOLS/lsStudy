<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/review_top_background"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/set_shareid_activity_back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/set_shareid_activity_back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:background="@drawable/back_btn_bg_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/share_setting"
                android:textColor="@color/text_write"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:background="@color/start_review_big_bg"
        android:orientation="vertical"
        android:padding="15dp" >

        <RelativeLayout
            android:id="@+id/set_shareid_activity_sina_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/sina_weibo"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/set_shareid_activity_sina_toggle"
                android:layout_width="59dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/toggle_btn_selector"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/set_shareid_activity_renren_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/renren"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/set_shareid_activity_renren_toggle"
                android:layout_width="59dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/toggle_btn_selector"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/set_shareid_activity_qq_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/qzone"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/set_shareid_activity_qq_toggle"
                android:layout_width="59dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/toggle_btn_selector"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>