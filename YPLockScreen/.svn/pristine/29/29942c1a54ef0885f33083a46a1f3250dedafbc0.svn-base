<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:paddingBottom="20dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_loading_title_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/remind"
        android:textColor="#0A8BE4"
        android:textSize="20sp" />

    <View
        android:id="@+id/dialog_loading_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_loading_title_text"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/dialog_loading_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_loading_top_line"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/downloading_3dot"
        android:textColor="#555555"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/dialog_loading_context_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_loading_content_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_drawable" />

    <View
        android:id="@+id/dialog_loading_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_loading_context_bar"
        android:layout_marginTop="20dp"
        android:background="#e0e0e0" />

    <Button
        android:id="@+id/dialog_loading_canncel_btn"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_bg_gary_selector"
        android:layout_below="@id/dialog_loading_bottom_line"
        android:text="@string/cancel"
        android:textColor="@color/text_write"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

</RelativeLayout>