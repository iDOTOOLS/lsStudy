<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
        android:id="@+id/fragment_viewpager_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <Button
        android:id="@+id/fragment_viewpager_item_button"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/welcome_start_btn_selector"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@drawable/welcome_btn_text_selector"
        android:textSize="20sp"
        android:text="@string/start_learning"
        />
</RelativeLayout>
