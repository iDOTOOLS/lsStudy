<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/review_top_background"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/download_wallpager_activity_back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/download_wallpager_activity_back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:background="@drawable/back_btn_bg_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/select_lock_wallpaper"
                android:textColor="@color/text_write"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/download_wallpager_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:verticalSpacing="10dp" />

</LinearLayout>