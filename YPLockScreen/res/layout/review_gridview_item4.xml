<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/gridview_item4_left_ly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gridview_item4_img"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:src="@drawable/master_icon" />

        <TextView
            android:id="@+id/gridview_item4_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/review_module_master_text"
            android:textColor="@color/indicator_pressed" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6" >

        <com.yp.lockscreen.view.AutofitTextView
            android:id="@+id/gridview_item4_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxWidth="80dp"
            android:text="1"
            android:textColor="@color/text_count_gray"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/item_handle_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gridview_item4_count_text"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/gridview_item4_count_text"
            android:text="@string/review_text_wrodcount"
            android:textColor="@color/indicator_pressed"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>