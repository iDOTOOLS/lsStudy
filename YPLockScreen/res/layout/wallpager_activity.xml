<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/review_top_background"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/wall_activity_back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/stucy_plane_back_btn"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:background="@drawable/back_btn_bg_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/wallpaper_title_text"
                android:textColor="@color/text_write"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="28"
        >
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/start_review_big_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/wallpager_activity_pre_img"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/picture" />

        <RelativeLayout
            android:id="@+id/wallpager_activity_choose_lib_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/choose_from_wallpaper_repository"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/set_button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wallpager_activity_choose_photo_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/choose_from_phone_album"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/set_button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wallpager_acticity_choose_home_ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/set_item_bg_selector"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/use_system_desktop_wallpaper"
                android:textColor="#555555"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/set_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" >

            <Button
                android:id="@+id/wallpager_activity_sure_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_bg_yellow_selector"
                android:gravity="center"
                android:text="@string/save"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout> 
        
    </ScrollView>
    

</LinearLayout>