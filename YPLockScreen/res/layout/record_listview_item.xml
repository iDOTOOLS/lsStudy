<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical" >
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/record_list_item_driver_line_img"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/record_list_line" />

        <LinearLayout
            android:id="@+id/record_list_item_days_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/record_list_item_days_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/record_days" />

            <TextView
                android:id="@+id/record_list_item_days_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/lock_screen_study_word_at"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_days_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#4ec1dc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_days_text_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/record_list_item_days_text"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/record_unlock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/unlock"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_unlock_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#3f9ddb"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_cishu_unit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/times"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_unlock_per_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9%"
                android:textColor="#3f9ddb"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_people"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/record_review" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/reviewed"
                android:textColor="#555555"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="#f6a86c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/record_list_item_num_unit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_word"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_list_item_share_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/record_share" />

            <TextView
                android:id="@+id/record_list_item_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/already_share_today_review"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/record_list_item_time_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/record_time" />

            <TextView
                android:id="@+id/record_list_item_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/record_list_item_time_img"
                android:text="@string/today_2"
                android:textColor="#555555"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/record_list_item_time_behavior_img"
        android:layout_width="49dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/record_behavior"
        />

</RelativeLayout>