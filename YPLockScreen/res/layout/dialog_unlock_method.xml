<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="#F9F9F9"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/unlock_mode"
        android:textColor="#0A8BE4"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />

    <RadioGroup
        android:id="@+id/dialog_unlock_method_radiobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/dialog_word_order_first" >

        <RadioButton
            android:id="@+id/dialog_unlock_method_radiobtn_first"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="@string/one_word_unlock"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <RadioButton
            android:id="@+id/dialog_unlock_method_radiobtn_second"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="@string/three_word_unlock"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <RadioButton
            android:id="@+id/dialog_unlock_method_radiobtn_third"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="@string/five_word_unlock"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <RadioButton
            android:id="@+id/dialog_unlock_method_radiobtn_four"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="@string/ten_word_unlock_study_god_mode"
            android:textColor="#555555"
            android:textSize="16sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" >

        <Button
            android:id="@+id/dialog_unlock_method_ok_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bg_yellow_selector"
            android:text="@string/affirm"
            android:textColor="@color/text_write"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>