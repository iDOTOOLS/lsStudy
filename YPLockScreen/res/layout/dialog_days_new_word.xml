<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="#F9F9F9"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_days_new_word_title_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/everyday_new_word"
        android:textColor="#0A8BE4"
        android:textSize="20sp" />

    <View
        android:id="@+id/dialog_days_new_word_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_days_new_word_title_text"
        android:background="#e0e0e0" />

    <RadioGroup
        android:id="@+id/dialog_days_new_word_radiobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_days_new_word_top_line" >

        <RadioButton
            android:id="@+id/dialog_days_new_word_first"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="10"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <RadioButton
            android:id="@+id/dialog_days_new_word_second"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <RadioButton
            android:id="@+id/dialog_days_new_word_third"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="30"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/dialog_days_new_word_four"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:drawableRight="@drawable/radio_btn_selector"
            android:gravity="center_vertical"
            android:text="@string/infinite_mode"
            android:textColor="#555555"
            android:textSize="16sp"
            android:visibility="gone" />
    </RadioGroup>

    <View
        android:id="@+id/dialog_days_new_word_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_days_new_word_radiobtn"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dialog_days_new_word_bottom_line"
        android:gravity="center" >

        <Button
            android:id="@+id/days_new_word_ok_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bg_yellow_selector"
            android:text="@string/affirm"
            android:textColor="@color/text_write"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>