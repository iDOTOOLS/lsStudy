<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef"
    android:gravity="center" 
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gridview_item2_left_ly"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gridview_item2_img"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:src="@drawable/keep_use_icon" />

            <TextView
                android:id="@+id/gridview_item2_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/indicator_pressed"
                android:text="@string/review_module_keep_use_text" />
        </LinearLayout>
        
		<RelativeLayout
		    android:layout_width="0dp"
		    android:layout_weight="6"
		    android:layout_height="wrap_content"
		    >
		    <com.yp.lockscreen.view.AutofitTextView
		        android:id="@+id/gridview_item2_count_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:maxWidth="60dp"
		        android:text="13231"
		        android:textSize="40sp"
		        android:textColor="@color/text_count_gray"
		        />
		    <TextView
		        android:id="@+id/item_use_unit_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@id/gridview_item2_count_text"
		        android:layout_alignBaseline="@id/gridview_item2_count_text"
		        android:text="@string/review_text_day"
		        android:textColor="@color/indicator_pressed"
		        android:textSize="12sp"
		        />
		    
		</RelativeLayout>

</LinearLayout>